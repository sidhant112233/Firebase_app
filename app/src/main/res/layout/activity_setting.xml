<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Setting_Activity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="8dp"
            android:showDividers="middle">

            <!-- Section 1: Account -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textStyle="bold"
                android:clickable="true"
                android:textSize="18sp"
                android:paddingBottom="16dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Account"
                android:drawableStart="@drawable/profile"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:background="?selectableItemBackground"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit profile"
                android:drawableStart="@drawable/baseline_mode_edit_outline_24"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Security"
                android:clickable="true"
                android:drawableStart="@drawable/security"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:background="?selectableItemBackground"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:clickable="true"
                android:drawableStart="@drawable/notifications"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:background="?selectableItemBackground"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:clickable="true"
                android:drawableStart="@drawable/privacy"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:background="?selectableItemBackground"
                android:textColor="@color/black" />




            <TextView
                android:id="@+id/free_up_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free up space"
                android:drawableStart="@drawable/space"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/data_saver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Saver"
                android:clickable="true"
                android:drawableStart="@drawable/database"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:background="?selectableItemBackground"
                android:textColor="@color/black" />



            <TextView
                android:id="@+id/add_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add account"
                android:drawableStart="@drawable/add_account"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:textColor="#FF0700"
                android:drawableStart="@drawable/baseline_logout_24"
                android:drawablePadding="12dp"
                android:clickable="true"
                android:padding="12dp"
                android:background="?selectableItemBackground" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>